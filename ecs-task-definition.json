{
    "family": "my-task-def",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "post-management-container",
            "image": "992382603646.dkr.ecr.eu-north-1.amazonaws.com/post-management-microservice:latest",
            "cpu": 256,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/my-task-def",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::992382603646:role/ecsTaskExecutionRole"
}